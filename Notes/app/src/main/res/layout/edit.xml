<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000" >

    <LinearLayout
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#503000"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/button_color"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:textSize="20sp"
                android:text="\u26bf"
                android:onClick="showMenu"
                android:tag="color_menu"
                android:background="@drawable/selector_gray"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="end">

            <ImageButton
                android:id="@+id/button_back"
                android:onClick="back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/selector_back" />

            <ImageButton
                android:id="@+id/button_save"
                android:onClick="save"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/selector_save" />

            <ImageButton
                android:id="@+id/button_menu"
                android:onClick="showMenu"
                android:tag="item_menu"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/selector_menu" />

        </LinearLayout>


    </LinearLayout>

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:ems="10"
        android:gravity="top"
        android:background="@drawable/selector_text_gray"
        android:padding="5dp"
        android:text="Text\ntext2"
        android:inputType="textMultiLine" />


</LinearLayout>