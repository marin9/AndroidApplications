<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="2dp"
    android:orientation="vertical"
    android:background="#000000"
    tools:context="marin.bralic.calc.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <marin.bralic.calc.Display
        android:id="@+id/display"
        android:layout_width="fill_parent"
        android:layout_height="60dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_weight="1" >

        <RadioButton
            android:id="@+id/radioButton4"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="pressButton"
            android:textColor="#00FFFF"
            android:text="DEC" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/prog_display"
            android:layout_margin="2dp"
            android:paddingEnd="3dp"
            android:paddingStart="2dp"
            android:textColor="#00FFFF"
            android:textSize="25dp"
            android:textStyle="bold"
            android:gravity="end|center"
            android:text="0" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_weight="1" >

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="pressButton"
            android:text="BIN "
            android:textColor="#00FFFF" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/prog_display"
            android:layout_margin="2dp"
            android:paddingEnd="3dp"
            android:paddingStart="2dp"
            android:textColor="#00FFFF"
            android:textSize="25dp"
            android:textStyle="bold"
            android:gravity="end|center"
            android:text="0" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_weight="1" >

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="pressButton"
            android:textColor="#00FFFF"
            android:text="OCT" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/prog_display"
            android:layout_margin="2dp"
            android:paddingEnd="3dp"
            android:paddingStart="2dp"
            android:textColor="#00FFFF"
            android:textSize="25dp"
            android:textStyle="bold"
            android:gravity="end|center"
            android:text="0" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_weight="1" >

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="pressButton"
            android:textColor="#00FFFF"
            android:text="HEX" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/prog_display"
            android:layout_margin="2dp"
            android:paddingEnd="3dp"
            android:paddingStart="2dp"
            android:textColor="#00FFFF"
            android:textSize="25dp"
            android:textStyle="bold"
            android:gravity="end|center"
            android:text="0" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button_s"
            android:text="S"
            style="@style/light_blue_buttons"/>

        <Button
            android:id="@+id/button_left"
            android:text="\u25C1"
            style="@style/light_blue_buttons"/>

        <Button
            android:id="@+id/button_right"
            android:text="\u25B7"
            style="@style/light_blue_buttons"/>

        <Button
            android:id="@+id/button_mod"
            android:text="Mod"
            style="@style/light_blue_buttons" />

        <Button
            android:id="@+id/button_c_S"
            android:text="C"
            style="@style/light_red_buttons"/>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button_lsh_rol"
            style="@style/light_green_buttons"
            android:text="Lsh" />

        <Button
            android:id="@+id/button_open"
            style="@style/light_green_buttons"
            android:text="(" />

        <Button
            android:id="@+id/button_close"
            style="@style/light_green_buttons"
            android:text=")" />

        <Button
            android:id="@+id/button_rsh_ror"
            android:text="Rsh" 
            style="@style/light_green_buttons"/>

        <Button
            android:id="@+id/button_del_B"
            android:text="Del"
            style="@style/light_red_buttons"/>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button_and"
            style="@style/light_green_buttons"
            android:textSize="25dp"
            android:text="AND" />

        <Button
            android:id="@+id/button_or"
            style="@style/light_green_buttons"
            android:textSize="25dp"
            android:text="OR" />

        <Button
            android:id="@+id/button_not"
            style="@style/light_green_buttons"
            android:textSize="25dp"
            android:text="NOT" />

        <Button
            android:id="@+id/button_xor"
            android:textSize="25dp"
            android:text="XOR"
            style="@style/light_green_buttons" />

        <Button
            android:id="@+id/button_eq"
            style="@style/light_green_buttons"
            android:text="=" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button7"
            android:text="7"
            style="@style/light_orange_buttons"/> 

        <Button
            android:id="@+id/button8"
            android:text="8"
            style="@style/light_orange_buttons"/> 

        <Button
            android:id="@+id/button9"
            android:text="9"
            style="@style/light_orange_buttons"/>

        <Button
            android:id="@+id/button_hexF"
            android:text="F" 
            style="@style/light_orange_buttons"/>
 

        <Button
            android:id="@+id/button_plus_settings"
            android:text="+"
            style="@style/light_orange_buttons"/>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button4"
            android:text="4"
            style="@style/light_orange_buttons"/> 

        <Button
            android:id="@+id/button5"
            android:text="5"
            style="@style/light_orange_buttons"/> 

        <Button
            android:id="@+id/button6"
            android:text="6"
            style="@style/light_orange_buttons"/>

        <Button
            android:id="@+id/button_hexE"
            android:text="E" 
            style="@style/light_orange_buttons"/>
 

        <Button
            android:id="@+id/button_minus"
            android:text="-"
            style="@style/light_orange_buttons"/> 

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button1"
            android:text="1"
            style="@style/light_orange_buttons"/> 

        <Button
            android:id="@+id/button2"
            android:text="2"
            style="@style/light_orange_buttons"/> 

        <Button
            android:id="@+id/button3"
            android:text="3"
            style="@style/light_orange_buttons"/>

        <Button
            android:id="@+id/button_hexD"
            android:text="D" 
            style="@style/light_orange_buttons"/>
 

        <Button
            android:id="@+id/button_mull"
            android:text="x"
            style="@style/light_orange_buttons"/> 

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button0"
            android:text="0"
            style="@style/light_orange_buttons"/> 

        <Button
            android:id="@+id/button_hexA"
            android:text="A"
            style="@style/light_orange_buttons"/>

        <Button
            android:id="@+id/button_hexB"
            android:text="B"
            style="@style/light_orange_buttons"/>

        <Button
            android:id="@+id/button_hexC"
            android:text="C" 
            style="@style/light_orange_buttons"/>

        <Button
            android:id="@+id/button_div"
            android:text="/"
            style="@style/light_orange_buttons"/>

    </LinearLayout>

</LinearLayout>
