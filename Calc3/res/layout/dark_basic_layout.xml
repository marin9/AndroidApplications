<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="2dp"
    android:orientation="vertical"
    android:background="#000000"
    tools:context="marin.bralic.calc.MainActivity" >

    <marin.bralic.calc.Display
        android:id="@+id/display"
        android:layout_width="fill_parent"
        android:layout_height="70dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button_s"
            android:text="S"
            style="@style/green_buttons"/>

        <Button
            android:id="@+id/button_sqrt"
            style="@style/green_buttons"
            android:text="\u221Ax" />

        <Button
            android:id="@+id/button_pn"
            style="@style/green_buttons"
            android:text="x\u207F" />

        <Button
            android:id="@+id/button_c_S"
            style="@style/red_buttons"
            android:text="C" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button_pi"
            style="@style/green_buttons"
            android:text="\u03C0" />

        <Button
            android:id="@+id/button_open"
            style="@style/green_buttons"
            android:text="(" />

        <Button
            android:id="@+id/button_close"
            style="@style/green_buttons"
            android:text=")" />

        <Button
            android:id="@+id/button_del_P"
            style="@style/red_buttons"
            android:text="Del" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button7"
            android:text="7"
            style="@style/orange_buttons"/> 

        <Button
            android:id="@+id/button8"
            android:text="8"
            style="@style/orange_buttons"/> 

        <Button
            android:id="@+id/button9"
            android:text="9"
            style="@style/orange_buttons"/> 

        <Button
            android:id="@+id/button_plus_settings"
            android:text="+"
            style="@style/orange_buttons"/>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button4"
            android:text="4"
            style="@style/orange_buttons"/> 

        <Button
            android:id="@+id/button5"
            android:text="5"
            style="@style/orange_buttons"/> 

        <Button
            android:id="@+id/button6"
            android:text="6"
            style="@style/orange_buttons"/> 

        <Button
            android:id="@+id/button_minus"
            android:text="-"
            style="@style/orange_buttons"/> 

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button1"
            android:text="1"
            style="@style/orange_buttons"/> 

        <Button
            android:id="@+id/button2"
            android:text="2"
            style="@style/orange_buttons"/> 

        <Button
            android:id="@+id/button3"
            android:text="3"
            style="@style/orange_buttons"/> 

        <Button
            android:id="@+id/button_mull"
            android:text="x"
            style="@style/orange_buttons"/> 

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button0"
            android:text="0"
            style="@style/orange_buttons"/> 

        <Button
            android:id="@+id/button_point"
            android:text="."
            style="@style/orange_buttons"/>

        <Button
            android:id="@+id/button_eq"
            android:text="="
            style="@style/orange_buttons"/>

        <Button
            android:id="@+id/button_div"
            android:text="/"
            style="@style/orange_buttons"/>

    </LinearLayout>

</LinearLayout>