<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape
            android:shape="oval">
            <solid
                android:color="#ffc000" />
            <size
                android:width="80dp"
                android:height="80dp"/>
        </shape>
    </item>
    <item>
        <shape
            android:shape="oval">
            <gradient
                android:startColor="#a06000"
                android:endColor="#b0a000"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#704000" />
            <size
                android:width="80dp"
                android:height="80dp"/>

        </shape>
    </item>
</selector>